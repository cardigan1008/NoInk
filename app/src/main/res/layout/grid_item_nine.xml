<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nine_pic_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo1"
                android:layout_width="@dimen/nine_pic_height"
                android:layout_height="@dimen/nine_pic_width"
                app:srcCompat="@mipmap/ic_cat" />


            <ImageView
                android:id="@+id/photo2"
                android:layout_width="@dimen/nine_pic_height"
                android:layout_height="@dimen/nine_pic_width"
                android:layout_marginStart="@dimen/nine_pic_margin"
                app:srcCompat="@mipmap/ic_cat" />

            <ImageView
                android:id="@+id/photo3"
                android:layout_width="@dimen/nine_pic_height"
                android:layout_height="@dimen/nine_pic_width"
                android:layout_marginStart="@dimen/nine_pic_margin"
                app:srcCompat="@mipmap/ic_cat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/nine_pic_margin">

            <ImageView
                android:id="@+id/photo4"
                android:layout_width="@dimen/nine_pic_height"
                android:layout_height="@dimen/nine_pic_width"
                app:srcCompat="@mipmap/ic_cat" />


            <ImageView
                android:id="@+id/photo5"
                android:layout_width="@dimen/nine_pic_height"
                android:layout_height="@dimen/nine_pic_width"
                android:layout_marginStart="@dimen/nine_pic_margin"
                app:srcCompat="@mipmap/ic_cat" />

            <ImageView
                android:id="@+id/photo6"
                android:layout_width="@dimen/nine_pic_height"
                android:layout_height="@dimen/nine_pic_width"
                android:layout_marginStart="@dimen/nine_pic_margin"
                app:srcCompat="@mipmap/ic_cat" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>