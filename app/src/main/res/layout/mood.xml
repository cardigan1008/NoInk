<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<GridLayout
    android:id="@+id/mood_gridlayout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:columnCount="3"
    android:rowCount="4"
    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/happy"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:padding="@dimen/defaultPadding"
            android:text="开心"
            android:drawableStart="@drawable/happy"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/calm"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:padding="@dimen/defaultPadding"
            android:text="平静"
            android:drawableStart="@drawable/calm"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/angry"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:padding="@dimen/defaultPadding"
            android:text="生气"
            android:drawableStart="@drawable/angry"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/bored"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:padding="@dimen/defaultPadding"
            android:text="无聊"
            android:drawableStart="@drawable/bored"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/awful"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:padding="@dimen/defaultPadding"
            android:text="恶心"
            android:drawableStart="@drawable/awful"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/depressed"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:padding="@dimen/defaultPadding"
            android:text="委屈"
            android:drawableStart="@drawable/depressed"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/disappointed"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:padding="@dimen/defaultPadding"
            android:text="难过"
            android:drawableStart="@drawable/disappointed"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/lonely"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:padding="@dimen/defaultPadding"
            android:text="孤独"
            android:drawableStart="@drawable/lonely"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:padding="@dimen/defaultPadding"
            android:text="不知道"
            android:drawableStart="@drawable/neutral"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:padding="@dimen/defaultPadding"
            android:text="压力"
            android:drawableStart="@drawable/tense"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:padding="@dimen/defaultPadding"
            android:text="惊喜"
            android:drawableStart="@drawable/surprised"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:padding="@dimen/defaultPadding"
            android:text="惊喜"
            android:drawableStart="@drawable/suspicious"
            android:drawablePadding="5dp"
            />
    </RelativeLayout>


</GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>