<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.account.AccountFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="-80dp"
        android:background="@drawable/full_circle_background"
        android:contentDescription="@string/nav_header_desc"
        android:scaleType="center"
        android:src="@mipmap/ic_cat"
        android:elevation="5dp"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/defaultPadding"
        app:cardCornerRadius="@dimen/defaultPadding"
        app:cardBackgroundColor="@color/teal_200"
        android:layout_gravity="center"
        >

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="文章数"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/bigTextSize"
                android:padding="@dimen/defaultPadding"
                />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@+id/textView1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/defaultTextSize"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            >
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布数"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/bigTextSize"
                android:padding="@dimen/defaultPadding"
                />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@+id/textView3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/defaultTextSize"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="220dp"
        android:gravity="center"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >


        <com.bagel.noink.ui.account.PersonalItemView
            android:id="@+id/item_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            app:icon="@drawable/ic_contacts_nickname"
            app:name="昵称"
            app:show_line="true"
            app:show_more="true"
            tools:ignore="MissingConstraints" />

        <com.bagel.noink.ui.account.PersonalItemView
            android:id="@+id/item_gender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            app:icon="@drawable/ic_contacts_nickname"
            app:name="性别"
            app:show_line="true"
            app:show_more="true"
            tools:ignore="MissingConstraints" />

        <com.bagel.noink.ui.account.PersonalItemView
            android:id="@+id/item_birthday"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            app:icon="@drawable/ic_contacts_birthday"
            app:name="出生年月"
            app:show_line="true"
            app:show_more="true"
            tools:ignore="MissingConstraints" />

        <com.bagel.noink.ui.account.PersonalItemView
            android:id="@+id/item_wechat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            app:icon="@drawable/ic_wechat"
            app:name="绑定微信"
            app:show_line="true"
            app:show_more="true"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <com.bagel.noink.ui.account.PersonalItemView
            android:id="@+id/item_uid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            app:icon="@drawable/ic_public_contacts"
            app:name="UID"
            app:show_line="true"
            app:show_more="false"
            tools:ignore="MissingConstraints" />

        <com.bagel.noink.ui.account.PersonalItemView
            android:id="@+id/item_update_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            app:icon="@drawable/ic_screenshot_penshape"
            app:name="修改密码"
            app:show_line="true"
            app:show_more="true"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <!--  测试用的按钮  -->
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exitButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="退出登录" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="登录测试按钮" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:visibility="gone"
            android:text="注册测试按钮" />
    </LinearLayout>
</LinearLayout>